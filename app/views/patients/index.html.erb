<div class="container">
    <h3>DOCTORS</h3>
    <table class="table">
        <thead>
            <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
             <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% @patients.each do |patient|%>
            <tr>
            <th scope="row"><%= patient.id%></th>
            <td><%= patient.name%></td>
            <td><%= link_to 'Edit', edit_patient_path(patient), class: 'btn btn-primary'%></td>
            <td><%= button_to 'Delete',  patient , method: :delete, class: "btn btn-primary",data: {confirm: "Are you sure?"} %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>