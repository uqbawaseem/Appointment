<div class="container">
    <h3>PATIENTS</h3>
    <table class="table">
        <thead>
            <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
             <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% @patients.each do |patient|%>
            <tr>
            <th scope="row"><%= patient.id%></th>
            <td><%= patient.name%></td>
            <td class="text-center"><%= link_to 'Edit', edit_patient_path(patient), class: 'btn btn-outline-info'%></td>
            <td class="text-center"><%= link_to 'Details', patient_path(patient), class: 'btn btn-outline-success'%></td>
            <td><%= button_to 'Delete',  patient , method: :delete, class: "btn btn-outline-danger",data: {confirm: "Are you sure?"} %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>